<Controls:MetroWindow x:Class="SCRMTracker.SettingsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      Title="환경설정"
                      Width="400"
                      Height="380"
                      MinWidth="400"
                      MinHeight="380"
                      WindowStartupLocation="CenterScreen"
                      WindowStyle="ThreeDBorderWindow" 
                      ResizeMode="NoResize"
                      mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="테마 설정" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" 
                       Content="메인색상" 
                       VerticalAlignment="Center"
                       Padding="5"
                       Margin="0,0,10,5"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                          x:Name="mainThemeComboBox" 
                          Height="31"
                          VerticalAlignment="Center"
                          Margin="0,0,0,5"
                          SelectedIndex="0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse  Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Ellipse.Fill>
                                    <Ellipse.Stroke>
                                        <SolidColorBrush Color="Gray"/>
                                    </Ellipse.Stroke>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Label Grid.Row="1" Grid.Column="0" 
                       Content="보조색상" 
                       VerticalAlignment="Center"
                       Padding="5"
                       Margin="0,5,10,0"/>
                <ComboBox Grid.Row="1" Grid.Column="1"
                          x:Name="subThemeComboBox" 
                          Height="31"
                          VerticalAlignment="Center"
                          Margin="0,5,0,0"
                          SelectedIndex="0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse  Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="프로그램 설정" Margin="0,10,0,0">
            <StackPanel Margin="10">
                <Controls:ToggleSwitch x:Name="rememberAdapterToggleSwitch" Content="가장 최근에 사용한 네트워크 어댑터 기억" 
                          Height="31"
                          VerticalAlignment="Center"
                          Margin="0,0,0,5"/>
                <Controls:ToggleSwitch x:Name="autoCaptureToggleSwitch" Content="프로그램 시작시 자동으로 캡처 시작" 
                          Height="31"
                          VerticalAlignment="Center"
                          Margin="0,5,0,0" IsEnabled="False"/>
                <Controls:ToggleSwitch x:Name="blacklistSoundToggleSwitch" 
                               Content="블랙리스트 입장 시 소리 재생" 
                               Height="31"
                               VerticalAlignment="Center"
                               Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Controls:MetroWindow>